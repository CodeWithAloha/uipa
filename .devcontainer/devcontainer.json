{
	"name": "UIPA DevBox",
	"build": {
	  "context": "..",
	  "dockerfile": "../Dockerfile"
	},
	"runArgs": [
	  "--init",
	  "--privileged"
	],
	"forwardPorts": [8000, 5432, 9200],
	"postCreateCommand": "./install_docker.sh",
	"initializeCommand": "sudo service docker start && docker-compose up -d",
	"customizations": {
	  "vscode": {
		"extensions": [
		  "ms-python.python",
		  "ms-azuretools.vscode-docker"
		],
		"settings": {
		  "terminal.integrated.shell.linux": "/bin/bash"
		}
	  }
	}
  }
  